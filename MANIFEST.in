# Include documentation
include README.md
include LICENSE
include CHANGELOG.md
include CONTRIBUTING.md

# Include configuration files
include config/*.yaml
recursive-include bountybot/config *.yaml

# Include knowledge base
recursive-include bountybot/knowledge *.yaml

# Include templates
recursive-include bountybot/outputs/templates *.html
recursive-include bountybot/outputs/templates *.md
recursive-include bountybot/outputs/templates *.jinja2

# Include examples
recursive-include examples *.json
recursive-include examples *.md
recursive-include examples *.txt

# Include tests
recursive-include tests *.py

# Exclude compiled files
global-exclude *.pyc
global-exclude *.pyo
global-exclude __pycache__
global-exclude .DS_Store
global-exclude *.so
global-exclude *.egg-info

