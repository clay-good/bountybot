[flake8]
# Maximum line length
max-line-length = 127

# Maximum complexity
max-complexity = 15

# Exclude patterns
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    build,
    dist,
    *.egg-info,
    .tox,
    .pytest_cache,
    .mypy_cache,
    node_modules,
    migrations

# Ignore specific errors
ignore =
    E203,
    E266,
    E501,
    W503,
    W504,
    E402,
    F401,
    F403,
    E731

# Select specific errors to check
select = E,W,F,C,N

# Per-file ignores
per-file-ignores =
    __init__.py:F401,F403
    tests/*:F401,F403,E501

# Show source code for each error
show-source = True

# Show pep8 error code
show-pep8 = True

# Count errors
count = True

# Print total number of errors
statistics = True

# Enable specific plugins
enable-extensions = G

# Docstring conventions
docstring-convention = google

# Import order style
import-order-style = google

# Application import names
application-import-names = bountybot

# Inline quotes
inline-quotes = double

# Multiline quotes
multiline-quotes = double

# Docstring quotes
docstring-quotes = double

# Avoid escape sequences
avoid-escape = True

